<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Barcode">

	<resultMap id="barcodeResultMap" type="barcodeModel">
		<id column="NAME" property="name"  />
		<result  column="JOB_TITLE" property="jobTitle"/>
		<result  column="DEPARTMENT" property="department"/>
		<result  column="ANNUAL_SALARY" property="annualSalary"/>
		<result  column="ESTIMATED_ANNUAL_SALARY" property="estimatedAnnualSalary"/>
	</resultMap>
	
	<cache>
	</cache>
	
	<select id="searchByBarId" parameterType="barcodeModel"  resultMap="barcodeResultMap">
	
		select * from EMPLOYEE where DEPARTMENT LIKE (#{department}) 
	
	</select>
	
	<select id="getAllDetails" parameterType="barcodeModel"  resultMap="barcodeResultMap">
	
		select * from EMPLOYEE 
	
	</select>
	
	<select id="getDeptList" parameterType="barcodeModel"  resultMap="barcodeResultMap">
	
		SELECT distinct department  FROM EMPLOYEE
	
	</select>
	<select id="goToViewtab" parameterType="barcodeModel"  resultMap="barcodeResultMap">
	
		SELECT *  FROM EMPLOYEE where JOB_TITLE LIKE (#{jobTitle})
	
	</select>
	<insert id="addnewStudent" parameterType="barcodeModel" >  Â 
	insert into EMPLOYEE
	(NAME,
	JOB_TITLE,
	DEPARTMENT,
	ESTIMATED_ANNUAL_SALARY,
	ANNUAL_SALARY) 
	values
	(#{name},
	#{jobTitle},
	#{department},
	#{estimatedAnnualSalary},
	#{annualSalary})
	</insert>
	
	
	<delete id="deleteStudent" parameterType="barcodeModel">
		delete  from EMPLOYEE where NAME LIKE #{name}
	</delete>
	<select id="regionIdlist" resultType='java.lang.Integer'>
		select distinct substring(ANNUAL_SALARY, 2, 1) from EMPLOYEE
	</select>
	
	<select id="selectedData" parameterType="string"  resultMap="barcodeResultMap">
	
		SELECT *  FROM EMPLOYEE where DEPARTMENT LIKE (#{deptName})
	
	</select>
	
	<select id="getSalInfo" parameterType="string"  resultMap="barcodeResultMap">
	
		SELECT ANNUAL_SALARY  FROM EMPLOYEE where NAME LIKE (#{name})
	
	</select>
	<update id="editStudent" parameterType="barcodeModel">
	update EMPLOYEE SET 
	NAME = #{name},
	ANNUAL_SALARY = #{annualSalary},
	DEPARTMENT =#{department},
	ESTIMATED_ANNUAL_SALARY=#{estimatedAnnualSalary},
	JOB_TITLE = #{jobTitle}
	where NAME = #{name}
<!-- 	update EMPLOYEE SET (NAME,ANNUAL_SALARY,DEPARTMENT,ESTIMATED_ANNUAL_SALARY,JOB_TITLE) -->
<!-- 	values -->
<!-- 	(#{name},#{annualSalary},#{department},#{estimatedAnnualSalary},#{jobTitle}) -->
<!-- 	where NAME = #{name} -->
	
	</update>
	
	
	<select id="getDataDisplay" parameterType="string"  resultMap="barcodeResultMap">
	
		SELECT *  FROM EMPLOYEE where NAME LIKE (#{emptName})
	
	</select>
</mapper>